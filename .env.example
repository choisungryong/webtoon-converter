# BanaToon Environment Variables
# Copy this file to .env.local and fill in your values

# Kakao API Key (JavaScript Key from Kakao Developers)
NEXT_PUBLIC_KAKAO_API_KEY=your_kakao_javascript_key

# Google AdSense Publisher ID
NEXT_PUBLIC_ADSENSE_ID=ca-pub-xxxxxxxxxx

# Google Analytics Measurement ID
NEXT_PUBLIC_GA_ID=G-xxxxxxxxxx

# Server-side keys (already in use)
# GEMINI_API_KEY=your_gemini_api_key
# REPLICATE_API_TOKEN=your_replicate_token

# OAuth Authentication
KAKAO_CLIENT_ID=your_kakao_rest_api_key
KAKAO_CLIENT_SECRET=your_kakao_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
JWT_SECRET=your_jwt_secret_at_least_32_chars
APP_URL=https://banatoon.app

# Toss Payments
NEXT_PUBLIC_TOSS_CLIENT_KEY=test_ck_xxxxxxxx
TOSS_SECRET_KEY=test_sk_xxxxxxxx
TOSS_WEBHOOK_SECRET=your_toss_webhook_secret
